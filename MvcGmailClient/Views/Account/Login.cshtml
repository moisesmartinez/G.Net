@model MvcGmailClient.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}


<!-- Login Content -->
<div class="content overflow-hidden">
    <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
            <!-- Login Block -->
            <div class="block block-themed animated fadeIn">
                <div class="block-header bg-primary">
                    <ul class="block-options">
                        <li>
                            <a href="@Url.Action("Register" ,"Account")" data-toggle="tooltip" data-placement="left" title="New Account"><i class="si si-plus"></i></a>
                        </li>
                        
                    </ul>
                    <h3 class="block-title">Login</h3>
                </div>
                <div class="block-content block-content-full block-content-narrow">
                    <!-- Login Title -->
                    <h1 class="h2 font-w600 push-30-t push-5">G.Net</h1>
                    <p>Welcome, please login.</p>
                    <!-- END Login Title -->

                    <!-- Login Form -->
                    <!-- jQuery Validation (.js-validation-login class is initialized in ~/Content/assets/js/validation/form-validations.js) -->
                    <!-- For more examples you can check out https://github.com/jzaefferer/jquery-validation -->
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "js-validation-login form-horizontal push-30-t push-50" }))
                    {
                        @Html.ValidationSummary(true)
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <div class="col-xs-12">
                                <div class="form-material form-material-primary floating">
                                    @Html.TextBoxFor(model => model.Username, new {@class = "form-control" })
                                    @Html.LabelFor(model => model.Username)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <div class="form-material form-material-primary floating">
                                    @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                                    @Html.LabelFor(model => model.Password)
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-12">
                                <label class="css-input switch switch-sm switch-primary">
                                    <input type="checkbox" id="RememberMe" name="RememberMe"><span></span> Remember Me?
                                </label>
                                <input name="RememberMe" type="hidden" value="false">
                            </div>
                        </div>
                        if(ViewData["Error"] != null)
                        {
                            <div class="alert alert-warning alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <p><i class="fa fa-warning"></i><a class="alert-link" href="javascript:void(0)">Something failed!..</a> @ViewData["Error"]</p>
                            </div>
                        }
                        <div class="form-group">
                            <div class="col-xs-12 col-sm-6 col-md-4">
                                <button class="btn btn-block btn-primary" type="submit"><i class="si si-login pull-right"></i> Log in</button>
                            </div>
                        </div>
                    }
                    <!-- END Login Form -->
                </div>
            </div>
            <!-- END Login Block -->
        </div>
    </div>
</div>
<!-- END Login Content -->


